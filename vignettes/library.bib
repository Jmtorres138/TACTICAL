file = {:home/jason/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Zhong et al. - 2010 - Liver and Adipose Expression Associated SNPs Are Enriched for Association to Type 2 Diabetes.pdf:pdf},
journal = {PLOS Genetics},
month = {may},
number = {5},
pages = {e1000932},
publisher = {Public Library of Science},
title = {{Liver and Adipose Expression Associated SNPs Are Enriched for Association to Type 2 Diabetes}},
