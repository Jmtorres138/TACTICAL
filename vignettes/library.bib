@article{Pappalardo2017,
abstract = {Insulin production by the pancreatic $\beta$-cell is required for normal glucose homeostasis. While key transcription factors that bind to the insulin promoter are known, relatively little is known about the upstream regulators of insulin transcription. Using a whole-genome RNA interference screen, we uncovered 26 novel regulators of insulin transcription that regulate diverse processes including oxidative phosphorylation, vesicle traffic, and the unfolded protein response (UPR). We focused on Spry2—a gene implicated in human type 2 diabetes by genome-wide association studies but without a clear connection to glucose homeostasis. We showed that Spry2 is a novel UPR target and its upregulation is dependent on PERK. Knockdown of Spry2 resulted in reduced expression of Serca2, reduced endoplasmic reticulum calcium levels, and induction of the UPR. Spry2 deletion in the adult mouse $\beta$-cell caused hyperglycemia and hypoinsulinemia. Our study greatly expands the compendium of insulin promoter regulators and demonstrates a novel $\beta$-cell link between Spry2 and human diabetes.},
author = {Pappalardo, Zachary and {Gambhir Chopra}, Deeksha and Hennings, Thomas G and Richards, Hunter and Choe, Justin and Yang, Katherine and Baeyens, Luc and Ang, Kenny and Chen, Steven and Arkin, Michelle and German, Michael S and McManus, Michael T and Ku, Gregory M},
