issn = {1061-4036},
journal = {Nature genetics},
number = {6},
pages = {561--564},
pmid = {21572415},
title = {{Identification of an imprinted master trans regulator at the KLF14 locus related to multiple metabolic phenotypes.}},
volume = {43},
year = {2011}
}
