doi = {10.1073/pnas.1317023110},
file = {:home/jason/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Parker et al. - 2013 - Chromatin stretch enhancer states drive cell-specific gene regulation and harbor human disease risk variants(2).pdf:pdf},
journal = {Proceedings of the National Academy of Sciences},
month = {oct},
number = {44},
pages = {17921 LP -- 17926},
title = {{Chromatin stretch enhancer states drive cell-specific gene regulation and harbor human disease risk variants}},
url = {http://www.pnas.org/content/110/44/17921.abstract},
volume = {110},
